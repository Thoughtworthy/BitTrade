@using BitTrade.Common.Helpers

@{

    var firstName = ClaimHelper.GetClaim("FirstName");
    var id = ClaimHelper.GetClaim("ID");
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


    <link href="@Url.Content("~/Content/Styles/Style.css")" rel="stylesheet" />
    <script src="~/Scripts/Common.js"></script>
</head>
<!-- body -->

<body class="main-layout">

    @{
        string userProfileUrl = Url.Action("UserProfile", "Home");
        string exchangeUrl = Url.Action("Exchange", "Home");
        string userLogInUrl = Url.Action("UserLogIn", "Home");
    }
    <div id="mySidepanel" class="sidepanel">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        <a class="active" href="index.html">Գլխավոր</a>
        <a href="@exchangeUrl">Արտարժույթներ</a>
        <a href="/">Դրամապանակ</a>
        <a href="/">Կապ</a>
    </div>
    <!-- header -->
    <header class="bg-gradient">
        <!-- header inner -->
        <div class="head-top">
            <div class="container-fluid">
                <div class="row d_flex">
                    <div class="col-sm-3">
                        <div class="logo">
                            <a style="color:#f7c137" href="/">BitCYPO</a>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <ul class="social_icon text_align_right d_none">
                            <li> <a href="/"><i class="fa fa-facebook-f"></i></a></li>
                            <li> <a href="/"><i class="fa fa-twitter"></i></a></li>
                            <li> <a href="/"><i class="fa fa-linkedin"></i></a></li>
                            <li> <a href="/"><i class="fa fa-instagram"></i></a></li>
                            <li> <a href="/"><i class="fa fa-youtube-play"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-sm-4">
                        <ul class="email text_align_right">
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("UserProfile", "Home", new { id = id }))
                                {
                                    <li class="d_none">

                                        <button type="submit" style="border: none; background: none; cursor: pointer; padding:3px">
                                            <span style="color: #f7c137;">@firstName</span>
                                            <i class="fa fa-user" style="color: #f7c137;" aria-hidden="true"></i>
                                        </button>
                                    </li>
                                }


                                using (Html.BeginForm("Messages", "Home", FormMethod.Get))
                                {
                                    <li class="d_none">

                                        <button type="submit" style="border: none; background: none; cursor: pointer; padding:3px">
                                            <i class="fa-envelope" style="color: #f7c137;" aria-hidden="true"></i>
                                        </button>
                                    </li>
                                }

                                using (Html.BeginForm("SignOut", "Home", FormMethod.Post))
                                {
                                    <li class="d_none">
                                        <button type="submit" style="border: none; background: none; cursor: pointer; padding: 3px">
                                            <i class="fa fa-sign-out" style="color: grey;" aria-hidden="true"></i>
                                        </button>
                                    </li>
                                }

                            }
                            else
                            {
                                using (Html.BeginForm("UserLogIn", "Home", FormMethod.Get))
                                {
                                    <li class="d_none">
                                        <button type="submit" style="border: none; background: none; cursor: pointer; padding: 3px">
                                            <i class="fa fa-sign-in" style="color: #f7c137;" aria-hidden="true"> Մուտք</i>
                                        </button>
                                    </li>
                                }
                            }
                            <li>
                                <button class="openbtn" onclick="toggleNav()" type="button">
                                    <img src="~/Content/Pics/menu_btn.png" alt="burger">
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- end header -->
    <!-- start slider section -->

    <div id="loading" class="d-none">Loading...</div>

    <div class="container col-md-12">
        @RenderBody()
    </div>

    <!-- end contact -->
    <!-- footer -->
    <footer>
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <a class="logo_bottom" href="/">BitCYPO</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="Informa conta ">
                            <h3>Հետադարձ կապ</h3>
                            <ul>
                                <li>
                                    <a href="Javascript:void(0) ">
                                        <i class="fa fa-map-marker " aria-hidden="true"></i> Location
                                    </a>
                                </li>
                                <li>
                                    <a href="Javascript:void(0) ">
                                        <i class="fa fa-phone " aria-hidden="true"></i> բջջ․ +01 1234567890
                                    </a>
                                </li>
                                <li>
                                    <a href="Javascript:void(0) ">
                                        <i class="fa fa-envelope " aria-hidden="true"></i> demo@gmail.com
                                    </a>
                                </li>
                            </ul>
                            <ul>
                                <li>
                                    Readable content of
                                </li>
                                <li>
                                    a page when looking
                                </li>
                                <li>
                                    at its layoutreadable
                                </li>
                                <li>
                                    content of a page
                                </li>
                                <li>
                                    when looking at its
                                </li>
                                <li>
                                    layout
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 ">
                        <div class="Informa ">
                            <h3>Newsletter</h3>
                            <form class="newslatter_form ">
                                <input class="ente " placeholder="Enter your email " type="text" name="Enter your email ">
                                <button class="subs_btn ">Subscribe</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="copyright text_align_center ">
                    <div class="container ">
                        <div class="row ">
                            <div class="col-md-12 ">
                                <p>  <span style="color:#f7c137">BitTarade</span> Company  &copy; @DateTime.Now.Year</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- end footer -->
    <!-- Javascript files-->

</body>
</html>

