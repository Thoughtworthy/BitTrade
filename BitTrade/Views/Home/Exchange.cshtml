
@{
    ViewBag.Title = "Currencies";
}




<link href="~/Content/Styles/Exchange.css" rel="stylesheet" />

<div class="row container m-0">
    <div class="col-sd-12 text-center mt-2">
        <div class=" d-flex text-center justify-content-between">
            <div class="container  table">

                <div style="margin-top:50px">
                    <h1 class="text-white">
                        Today's Cryptocurrency Prices
                    </h1>
                    <br />
                </div>

                <div class="table div d-flex mt-5 justify-content-center">
                    <table class="table table-dark m-4">
                        <thead class="text-success">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">1h%</th>
                                <th scope="col">Price</th>
                                <th scope="col">7d%</th>
                                <th scope="col">Market-Cap</th>
                                <th scope="col">24h%</th>
                                <th scope="col">Volume(24h)</th>
                            </tr>
                        </thead>
                        <tbody style="cursor: pointer;">
                            <tr class="currency">
                                <th scope="row">Bitcoin BTC</th>
                                <td class="bg-success">0.20 %</td>
                                <td>$24,044.20</td>
                                <td>8.55 %</td>
                                <td>$464,017,027,468.94</td>
                                <td class="bg-danger">-3.76 %</td>
                                <td>$33,289,028,531.20</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

