@using BitTrade.Common.Models

@model IEnumerable<CurrencyModel>


@foreach (var item in Model)
{
    <tr class="currency">
        <td><button scope="row" class="btn-success btn">Sell</button></td>
        <th scope="row">@item.Exchange</th>
        <td class="bg-success rounded-3 pair">@item.Pair</td>
        <td style="max-width:200px;min-width:200px" class="price">@item.Price</td>
        <td class="bg-success rounded-3" style="max-width:200px;min-width:200px">@(Math.Round((item.Price / item.PairPrice) + 3,4))%</td>
        <td style="max-width:200px;min-width:200px" class="pair-price">@item.PairPrice</td>
        <td class="bg-danger rounded-3" style="max-width:200px;min-width:200px">@(Math.Round((item.Price / item.PairPrice) - 7,4))  %</td>
        <td style="max-width:200px;min-width:200px">@item.Volume</td>
        <td><button scope="row" class="btn-danger btn sell">Sell</button></td>
    </tr>
}
<script src="~/Scripts/_Exchange.js" type="text/javascript"></script>
